/*专题轮播图样式*/
.subject {
  width: 100%;
  /*height:500rpx;*/
}
.subject .subject-item {
  position:relative;
  background-position: center center;
  background-size: cover;
  background-repeat: no-repeat;
}
.subject .subject-item .cover {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50%;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.3));
}
.subject .subject-item .title-par {
  width: 100%;
  position: absolute;
  left:0;
  bottom: 0;
  color: #fff;
  text-align: center;
  padding-bottom: 50rpx;
  padding-top: 30rpx;

  /* background: linear-gradient(transparent, rgba(0, 0, 0, 0.3)); */
}
.subject .subject-item .title-par > view {
  width: 100%;
  padding: 0 10px;
  margin-bottom: 15rpx;
}
.subject .subject-item .title-par .title {
  font-size: 20px;
}
.subject .subject-item .title-par .sub-title {
  font-size: 16px;
}
