<view class="list" style="min-height:{{winHeight + 'px'}};width:{{winWidth + 'px'}}">

    <navigator wx:for="{{data}}" wx:key="index" wx:for-item="item"
        url="/pages/home/index?id={{ item.id }}&img_url={{item.uploadImgPath}}"
        data-id="{{ item.id || '' }}"
        class="item of-flex-x-start"
        style="align-items: flex-start;">

        <view class="of-img-par">
            <image src="{{ item.uploadImgPath || '' }}" />
        </view>
        <view class="content of-flex-y-between" style="align-items: flex-start;">
            <view class="nickname">{{ item.nickname || '-' }}</view>
            <view class="of-ellipsis-single">{{ item.selfWord || '' }}</view>
        </view>

    </navigator>

</view>

<view wx:if="{{userinfoDialog}}" class="userinfo-dialog" style="min-height:{{winHeight + 'px'}};width:{{winWidth + 'px'}}">
    <view class="base-content">
        <view class="title">允许"颖秀"获取用户信息</view>
        <view class="btn-group of-flex-x-center">
            <view><button bindtap="userinfoCancel">取消</button></view>
            <view><button class="confirm" bindtap="userinfoConfirm" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">确定</button></view>
        </view>
    </view>
</view>

