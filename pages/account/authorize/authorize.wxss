/* authorize.wxss */
page {
  width: 100%;
}
.main {
  width: 100%;
  line-height: 1.4;
}
.auth-fail {
  width: 100%;
  margin: 50rpx 0 0;
  text-align: center;
}
.auth-fail-img {
  width: 241rpx;
  height: 241rpx;
  overflow: hidden;
}
.auth-title {
  width: 100%;
  margin: 50rpx 0 0;
  text-align: center;
  font-size: 18px;
}
.auth-info {
  width: 100%;
  padding: 40rpx 40rpx 0;
  box-sizing: border-box;
}
.auth-info-first {
  width: 100%;
  padding: 0 0 40rpx;
  font-size: 14px;
}
.auth-info-second {
  width: 100%;
  padding: 0 0 40rpx;
  font-size: 12px;
  color: #999;
}
.auth-process {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  background: #efeff4;
}
.auth-process-title {
  width: 100%;
  padding: 0 0 40rpx;
  font-size: 15px;
}
.auth-process-item {
  width: 100%;
}
.auth-process-item-txt {
  width: 100%;
  padding: 0 0 40rpx;
  font-size: 13px;
  color: #999;
}
.auth-process-item-first,
.auth-process-item-second {
  width: 100%;
  padding: 0 0 40rpx;
  text-align: center;
}
.auth-process-item-first image {
  width: 442rpx;
  height: 228rpx;
}
.auth-process-item-second image {
  width: 440rpx;
  height: 360rpx;
}
