
/*专题轮播图样式*/
.subject {
  width: 100%;
  /*height:500rpx;*/
}
.subject .subject-item {
  position:relative;
  background-position: center center;
  background-size: cover;
  background-repeat: no-repeat;
}
.subject .subject-item .cover {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50%;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.3));
}
.subject .subject-item .title-par {
  width: 100%;
  position: absolute;
  left:0;
  bottom: 0;
  color: #fff;
  text-align: center;
  padding-bottom: 50rpx;
  padding-top: 30rpx;

  /* background: linear-gradient(transparent, rgba(0, 0, 0, 0.3)); */
}
.subject .subject-item .title-par > view {
  width: 100%;
  padding: 0 10px;
  margin-bottom: 15rpx;
}
.subject .subject-item .title-par .title {
  font-size: 20px;
}
.subject .subject-item .title-par .sub-title {
  font-size: 16px;
}

/*下沉资源样式*/
.resource .resource-item {
    position: relative;
    width: 100%;
    /*height: 500rpx;*/
    margin-top: 10rpx;
    background-position: center center;
    background-size: cover;
    background-repeat: no-repeat;
}
.resource .resource-item .cover {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 50%;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.3));
}
.resource .resource-item .title-par {
  width: 100%;
  position: absolute;
  left:0;
  bottom: 0;
  color: #fff;
  text-align: center;
  padding-bottom: 30rpx;
  padding-top: 30rpx;

  /* background: linear-gradient(transparent, rgba(0, 0, 0, 0.3)); */
}
.resource .resource-item .title-par > view {
  width: 100%;
  padding: 0 20px;
  margin-bottom: 15rpx;
}
.resource .resource-item .title-par .title {
  font-size: 20px;
}
.resource .resource-item .title-par .sub-title {
  font-size: 16px;
}
.resource .resource-item .title-par .context {
  display: none;
  font-size: 12px;
}
.resource .resource-item .title-par .context > view {
  margin-right: 20rpx;
}
.resource .resource-item .title-par .context > view:last-child {
  margin-right: 0;
}
.resource .resource-item .title-par .context > view .img-par{
  height: 20px;
  line-height: 20px;
  margin-right: 5px;
  font-size: 14px;
  text-align: left;
}
.resource .resource-item .title-par .context > view .count-par{
  height: 20px;
  line-height: 20px;
  font-size: 14px;
  text-align: left;
}
.resource .resource-item .title-par .context image {
  width: 30px;
  height: 20px;
}

